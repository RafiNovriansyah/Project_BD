<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".jjg">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUMUS BANGUN JAJAR GENJANG"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#003366"
            android:textSize="18dp"

            />
        <Button
            android:id="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="KEMBALI"

            />
        <ImageView
            android:id="@+id/BLuas"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="214dp"
            android:src="@drawable/jajargenjang"
            />

        <TextView
            android:id="@+id/keliling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keliling = 2 * (SisiA + SisiB)"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/luas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luas = Sisi * Tinggi"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Bluas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="LUAS"

            />

        <Button
            android:id="@+id/Bkeliling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="KELILING"

            />

        <EditText
            android:id="@+id/sisiA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:hint="Masukkan Sisi A"
            android:visibility="gone"
            android:minHeight="48dp" />


        <EditText
            android:id="@+id/tinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:hint="Masukkan Tinggi"
            android:visibility="gone"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/sisiB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:hint="Masukkan Sisi B"
            android:visibility="gone"
            android:minHeight="48dp" />


        <Button
            android:id="@+id/Bhitung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="HITUNG"


            />

        <TextView
            android:id="@+id/hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:background="@color/White"
            android:fontFamily="serif"
            android:text="Â© Kelompok 8"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2"
            tools:ignore="MissingConstraints,TextSizeCheck"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>
</ScrollView>