<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="RUMUS BANGUN LAYANG LAYANG"
            android:textAlignment="center"
            android:textColor="#003366"
            android:textSize="18dp"

            />

        <Button
            android:id="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="KEMBALI"

            />

        <ImageView
            android:id="@+id/BLuas"
            android:layout_width="wrap_content"
            android:layout_height="214dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/layang2" />

        <TextView
            android:id="@+id/keliling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keliling = 4 * Sisi"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/luas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luas = Diagonal1 * Diagonal2 / 2"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="20dp" />
        <Button
            android:id="@+id/Bluas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="LUAS"

            />

        <Button
            android:id="@+id/Bkeliling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="KELILING"

            />

        <EditText
            android:id="@+id/D1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:hint="Masukkan Diagonal 1"
            android:minHeight="48dp"
            android:visibility="gone" />


        <EditText
            android:id="@+id/D2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:hint="Masukkan Diagonal 2"
            android:minHeight="48dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/sisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:hint="Masukkan Sisi"
            android:minHeight="48dp"
            android:visibility="gone" />


        <Button
            android:id="@+id/Bhitung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="HITUNG"


            />

        <TextView
            android:id="@+id/hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Hasil"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="11dp"
            android:background="@color/White"
            android:fontFamily="serif"
            android:text="Â© Kelompok 8"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2"
            tools:ignore="MissingConstraints,TextSizeCheck"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>
</ScrollView>